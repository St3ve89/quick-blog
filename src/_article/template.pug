extends ../_component/layout/base

block config
    -
        var title = template.head.title || 'You must set a title for this article'
        var description = template.head.description || 'You must set a description for this article'
block content
    .content
        each something in template.body
            if something.type == 'blockquote'
                blockquote.blockquote
                    .blockquote__body
                        each paragraph in something.data
                            p=paragraph
                    .blockquote-footer
                        a(href=something.link, target="_blank")=something.source

            if something.type == 'pre'
                h3.pre-title=something.title
                each dataValue in something.data
                    pre=dataValue

            if something.type == 'ul'
                ul
                    each listItem in something.data
                        li=listItem
            if something.type == 'ol'
                ol
                    each listItem in something.data
                        li=listItem

            if something.type == 'h1'
                h3=something.data
            
            if something.type == "h2"
                h2=something.data
            if something.type == "h3"
                h2=something.data
            if something.type == "h4"
                h2=something.data
            if something.type == "h5"
                h2=something.data
            if something.type == "h6"
                h2=something.data
            if something.type == "paragraph" || something.type == "p"
                each paragraph in something.data
                    p=paragraph
            if something.type == "paragraph-safe"
                each paragraph in something.data
                    p!=paragraph

            if something.type == 'hr'
                hr
            if something.type == 'img'
                img(src=something.src)
